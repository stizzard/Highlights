@model SarahTizzard_WEBD3000_MyTunes_MVC.ViewModels.MediaTypeDetailsData
@using PagedList.Mvc;


@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>MediaType</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(modelItem => modelItem.MediaType)
        </dt>

        <dd>
            @Html.DisplayFor(modelItem => modelItem.MediaType.Name)
        </dd>
        
        <dt>
            @Html.DisplayNameFor(modelItem => modelItem.MediaType.MediaCategory)
        </dt>

        <dd>
            @Html.DisplayFor(modelItem => modelItem.MediaType.MediaCategory.Name)
        </dd>
        
        <dt>
            Tracks
        </dt>

        @foreach (var item in Model.Tracks)
        {

            <dd>
                @Html.DisplayFor(modelItem => item.Name)
            </dd>
        }
    </dl>
</div>

Page @(Model.Tracks.PageCount < Model.Tracks.PageNumber ? 0 : Model.Tracks.PageNumber) of @Model.Tracks.PageCount
@Html.PagedListPager(Model.Tracks, page => Url.Action("Details", new { page }))

<br />

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.MediaType.MediaTypeId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
